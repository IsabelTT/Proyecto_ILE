<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-dialog" role="document">
    <div class="modal-content ">
      <div id="modalHeader" class="modal-header">
        <h5 class="modal-title" id="ModalTitle"></h5>
      </div>
      <div id="ModalMessage" class="modal-body"></div>
      <div class="modal-footer">
        {{!-- <button id="closeBtnModal" type="button" class="btn btn-secondary">Cerrar</button> --}}
        <a id="ModalAccept" type="button" class="btn btn-primary">Aceptar</a>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  function openmodal(data) {
    document.getElementById("ModalTitle").innerHTML = data.Title;
    document.getElementById("ModalMessage").innerHTML = data.Message;
    document.getElementById("ModalAccept").href = data.AcceptUrl;
    document.getElementById("myModal").style.display = "block";//open
  } 
</script>
