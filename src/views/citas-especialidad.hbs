{{> header}}

<div class="container">
    <div class="row">
        <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded-2 shadow shadow-sm">
                        <div class="card-header">
                            {{!--  --}}
                            <h3 class="mb-0">Cita {{especialidad}}</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" method="post" action="/crearcita">
                                {{!--Datos ocultos --}}
                                <input id="speciality" type="text" name="speciality" style="display:none"
                                    value={{especialidad}}>
                                <input id="id_user" type="text" name="id_user" style="display:none" value={{id_user}}>
                                {{!-- --}}
                                <div class="form-group row mb-4">
                                    <label for="medico">Medico:</label>
                                    <div class="col">
                                        <select id="medico" name="id_doctor" class="form-select form-select mb-3"
                                            aria-label="Large select example">
                                            {{#each ListaMedicos}}
                                            <option value={{this._id}}>
                                                {{this.nombre}} {{this.apellidopaterno}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group mb-4">
                                    <label for="fecha">Fecha:</label>
                                    <div class="col">
                                        <input id="fecha" type="date" id="start" name="date" min="2024-01-01"
                                            max="2025-12-31" class="form-control" required>
                                    </div>
                                </div>
                                <div class="form-group row mb-4">
                                    <label for="hora">Hora:</label>
                                    <div class="col">
                                        <select id="hora" name="time" class="form-select form-select mb-3" required>
                                            <option value="" disabled selected hidden>Hora...</option>
                                            <option value="9:00:00">9:00</option>
                                            <option value="10:00:00">10:00</option>
                                            <option value="11:00:00">11:00</option>
                                            <option value="12:00:00">12:00</option>
                                            <option value="13:00:00">13:00</option>
                                            <option value="14:00:00">14:00</option>
                                            <option value="15:00:00">15:00</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row mb-4">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary">Solicitar</button>
                                    </div>
                                </div>
                            </form>
                            <br>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->

{{> footer}}